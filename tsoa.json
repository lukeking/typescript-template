{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "public",
        "specVersion": 3,
        "securityDefinitions": {
            "api_key": {
                "type": "apiKey",
                "name": "authorization",
                "in": "header"
            }
        },
        "host": "localhost:3000",
        "schemes": ["http", "https"]
    },
    "routes": {
        "routesDir": "dist",
        "authenticationModule": "./src/routes/authentication.ts"
    }
}
